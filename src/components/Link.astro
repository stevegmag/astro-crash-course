---
import Icon from 'astro-icon/components';

interface Props {
  text: string;
  href: string;
  style: string;
  icon?: {
    name: string;
    position: string;
  };
  isFilled?: boolean;
  borderVisible?: boolean;
  classes?: string;
}

const {
  text,
  href,
  style,
  icon,
  isFilled = true,
  borderVisible = false,
  classes,
  ...rest
} = Astro.props as Props;

const basePath = import.meta.env.BASE_URL.endsWith('/') 
  ? import.meta.env.BASE_URL 
  : `${import.meta.env.BASE_URL}/`;

const fullHref = href.startsWith('http') ? href : `${basePath}${href.startsWith('/') ? href.slice(1) : href}`;
---

<a
  href={fullHref}
  class:list={[
    "link",
    classes,
    style,
    { filled: isFilled, bordered: borderVisible },
  ]}
  {...rest}
>
  {
    icon && (icon.position === "left" || icon.position === "above") && (
      <Icon name={icon.name} class={`icon-${icon.position}`} />
    )
  }
  {
    icon && (icon.position === "replace") && (
      <span class="background-enabled" style={`background-image: url('${basePath}${icon.name.startsWith('/') ? icon.name.slice(1) : icon.name}')`}>{text}</span>
    )
  }  
  { icon && (icon.position != "replace") && 
    ( <span>{text}</span> )
  }    
  { !icon && 
    ( <span>{text}</span> )
  }  

  {
    icon && (icon.position === "right" || icon.position === "below") && (
      <Icon name={icon.name} class={`icon-${icon.position}`} />
    )
  }
</a>

<style lang="scss">
  .background-enabled {
    display: block;
    width: auto;
    height: 75px;
    background-position: left top;
    background-repeat: no-repeat;
    background-size: contain;
    text-indent: -9999px;
  }
</style>
