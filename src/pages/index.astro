---
// layout imports
import MainLayout from '../layouts/MainLayout.astro';

// component imports
import Card from '../components/Card.astro';
import Link from '../components/Link.astro';

import { formatDate } from '../js/utils.js';

export interface post {
	id: number;
	title?: string;
	body?: string;
	userId?: number
}

const response = await fetch('https://jsonplaceholder.typicode.com/posts/?_limit=10');
// const response = await fetch('https://dummyjson.com/posts?limit=10');
console.log('res:: ', response);
const posts = await response.json();
---

<MainLayout title="Welcome to Astro.">
	<main>
		<h1>Welcome to <span class="text-gradient">SteveG Blog</span></h1>
		<p class="instructions">
			BUILT WITH ASTRO:: <br />
			To get started, open the directory <code>src/pages</code> in your project.<br />
			<strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above. (LOL. DONE)
		</p>
		<ul role="list" class="link-card-grid">
			{(!posts) && <li>no posts found</li>
			}
			{posts && posts.map( 
				(post: post, index: number) => (
				<a href={`/posts?id=${post.id}`} title={`Link to Post${post.title}`}>
				<Card dark={index % 2? true : false}>
					<h3>{post.title}</h3>
					<div>Published: 
					{
						formatDate(new Date(
							Math.floor((Math.random()*(2024-1970))+ 1970),
							Math.floor(Math.random()*12), 
							Math.floor(Math.random()*30)
						))
					}</div>
					<div>{`${post.body.slice(0,95)}... `}</div>
				</Card>
				</a>
				)
			)}


		</ul>
	</main>
</MainLayout>

